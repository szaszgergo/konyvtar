<Window x:Class="konyvtar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyvtar"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="450" Width="800">
    <StackPanel>
        <Grid Height="422" Loaded="Grid_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Felhasználónév:" Height="80" />
            <TextBox x:Name="felhasznalo" Text="placeholder" Grid.Row="1"  Height="80"   Width="792" HorizontalAlignment="Left"/>
            <Label Grid.Row="2" Content="Jelszó:"/>
            <TextBox x:Name="jelszo" Text="placeholder" Grid.Row="3" Height="80"   Width="792" HorizontalAlignment="Left" ></TextBox>
            <Button x:Name="kuld" Content="Elküldés"  Grid.Row="4" Height="80"   Width="792" HorizontalAlignment="Left" Click="kuld_Click"/>

        </Grid>
    </StackPanel>

</Window>
